{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "/opt/nodejs/productsLayer": [
        "lambda/products/layers/productsLayer/nodejs/productRepository"
      ],
      "/opt/nodejs/productEventsLayer": [
        "lambda/products/layers/productEventsLayer/nodejs/productEvent"
      ],
      "/opt/nodejs/ordersLayer": [
        "lambda/orders/layers/ordersLayer/nodejs/orderRepository"
      ],
      "/opt/nodejs/ordersApiLayer": [
        "lambda/orders/layers/ordersApiLayer/nodejs/orderApi"
      ],
      "/opt/nodejs/orderEventsLayer": [
        "lambda/orders/layers/orderEventsLayer/nodejs/orderEvent"
      ],
      "/opt/nodejs/orderEventsRepositoryLayer": [
        "lambda/orders/layers/orderEventsRepositoryLayer/nodejs/orderEventRepository"
      ],
      "/opt/nodejs/invoiceTransactionLayer": [
        "lambda/invoices/layers/invoiceTransactionLayer/nodejs/invoiceTransaction"
      ],
      "/opt/nodejs/invoiceWSConnectionLayer": [
        "lambda/invoices/layers/invoiceWSConnectionLayer/nodejs/invoiceWSConnection"
      ],
      "/opt/nodejs/invoiceRepositoryLayer": [
        "lambda/invoices/layers/invoiceRepositoryLayer/nodejs/invoiceRepository"
      ]
    }
  },
  "exclude": ["node_modules", "cdk.out"]
}
